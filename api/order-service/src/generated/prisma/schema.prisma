generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id         String      @id @default(uuid()) @db.Uuid
  products   Json
  totalPrice Float
  orderDate  DateTime    @default(now())
  status     StatusOrder @default(STOPPED)

  @@map("orders")
}

enum StatusOrder {
  STOPPED
  PENDING
  COMPLETED
  CANCELLED
}
